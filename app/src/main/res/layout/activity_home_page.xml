<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.w.travellight.HomePage">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/search_bar"
        android:background="@color/blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:maxLines="1"
            android:id="@+id/search_text"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_shape"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:hint="搜索景点/美食/酒店等"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/search_button"
            android:padding="12dp"
            android:background="@color/blue"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/search_bar"
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ViewFlipper
                android:background="@drawable/vf3"
                android:id="@+id/vf"
                android:layout_width="match_parent"
                android:layout_height="160dp"></ViewFlipper>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/button_shape_a"
                    android:layout_weight="1"
                    android:text="冬奥宣传"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@drawable/button_shape_b"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                android:padding="10dp"
                android:text="旅游景点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <Button
                    android:background="@drawable/button_shape_a"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="美食"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@drawable/button_shape_b"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="住宿"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/button_shape_b"
                    android:layout_weight="1"
                    android:text="旅行工具"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@drawable/button_shape_a"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="休闲娱乐"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@drawable/button_shape_b"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="旅游攻略"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@drawable/button_shape_a"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="跟团游"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_weight="5"
                    android:text="雪场推荐"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <Button
                    android:background="#01fcfbfb"
                    android:padding="1dp"
                    android:text="更多"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal" android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="120dp">
                <ImageButton
                    android:scaleType="fitCenter"
                    android:src="@mipmap/miyuan"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/name"
                        android:text="密苑"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="4"
                            android:text="距您0.1公里"
                            android:maxLines="2"
                            android:id="@+id/about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <Button
                            android:background="#03dcd5d5"
                            android:textColor="#405cba"
                            android:padding="3dp"
                            android:text="导航"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <TextView
                        android:layout_weight="1"
                        android:text="135元/天"
                        android:textStyle="bold"
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="19条评价"
                            android:layout_weight="1"
                            android:id="@+id/appraise"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:text="96%满意度"
                            android:layout_weight="1"
                            android:id="@+id/satisfaction"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="120dp">
                <ImageButton
                    android:scaleType="fitCenter"
                    android:src="@mipmap/duole"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/name1"
                        android:text="多乐美地"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="4"
                            android:text="距您11公里"
                            android:maxLines="2"
                            android:id="@+id/about1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <Button
                            android:background="#03dcd5d5"
                            android:textColor="#405cba"
                            android:padding="3dp"
                            android:text="导航"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <TextView
                        android:layout_weight="1"
                        android:text="128元/天"
                        android:textStyle="bold"
                        android:id="@+id/price1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="39条评价"
                            android:layout_weight="1"
                            android:id="@+id/appraise1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:text="97%满意度"
                            android:layout_weight="1"
                            android:id="@+id/satisfaction1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_weight="5"
                    android:text="美食推荐"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <Button
                    android:background="#01fcfbfb"
                    android:padding="1dp"
                    android:text="更多"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="120dp">
                <ImageButton
                    android:scaleType="fitCenter"
                    android:src="@mipmap/syc"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/name2"
                        android:text="山野菜"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="4"
                            android:text="距您1公里"
                            android:maxLines="2"
                            android:id="@+id/about2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <Button
                            android:background="#03dcd5d5"
                            android:textColor="#405cba"
                            android:padding="3dp"
                            android:text="导航"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <TextView
                        android:layout_weight="1"
                        android:text="12元/份"
                        android:textStyle="bold"
                        android:id="@+id/price2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="139条评价"
                            android:layout_weight="1"
                            android:id="@+id/appraise2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:text="92%满意度"
                            android:layout_weight="1"
                            android:id="@+id/satisfaction2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal" android:layout_width="match_parent"
                android:weightSum="5"
                android:layout_height="120dp">
                <ImageButton
                    android:scaleType="fitCenter"
                    android:src="@mipmap/qsyr"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/name3"
                        android:text="清水羊肉"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="4"
                            android:text="距您16公里"
                            android:maxLines="2"
                            android:id="@+id/about3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <Button
                            android:background="#03dcd5d5"
                            android:textColor="#405cba"
                            android:padding="3dp"
                            android:text="导航"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <TextView
                        android:layout_weight="1"
                        android:text="34元/份"
                        android:textStyle="bold"
                        android:id="@+id/price3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="69条评价"
                            android:layout_weight="1"
                            android:id="@+id/appraise3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:text="94%满意度"
                            android:layout_weight="1"
                            android:id="@+id/satisfaction3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_bar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageButton
            android:background="@color/white"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/home1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:background="@color/white"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/community0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:background="@color/white"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:src="@drawable/person0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>
